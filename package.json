{
  "name": "drift-js",
  "version": "1.6.1",
  "description": "Drift JavaScript SDK",
  "main": "dist/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "dist",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pereslavtsev/drift-js"
  },
  "author": {
    "name": "Vitaly Pereslavtsev",
    "email": "dev@pereslavtsev.com",
    "url": "https://www.pereslavtsev.com"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc --lib es6 webpack.config.ts && webpack",
    "cm": "git add . && git cz",
    "dev": "webpack-dev-server --no-inline",
    "docs": "yarn typedoc && docsify serve docs",
    "lint": "eslint --ext .ts --ignore-path .gitignore .",
    "lint:all": "yarn tsc && yarn lint && yarn lint:styles",
    "lint:fix": "yarn lint --fix",
    "test": "jest --config ./.jestrc.json",
    "test:all": "yarn test && yarn test:e2e",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --verbose --config ./e2e/jest-e2e.json",
    "typedoc": "sh update_docs.sh"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "axios": "^0.21.2",
    "query-string": "^6.12.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/faker": "^4.1.11",
    "@types/jest": "^25.2.1",
    "@types/shortid": "^0.0.29",
    "@types/webpack": "^4.41.12",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "clean-webpack-plugin": "^3.0.0",
    "commitizen": "^4.0.5",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "jest": "^25.5.2",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "shortid": "^2.2.15",
    "standard-version": "^7.1.0",
    "ts-jest": "^25.4.0",
    "ts-loader": "^7.0.2",
    "typedoc": "^0.17.6",
    "typedoc-plugin-markdown": "^2.2.17",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
